<body>
    <div class="login">
        <form onsubmit="return validateForm()">
            <h1 align="center">LOG IN</h1>
            <label for="username">Username</label>
                <input type="text" id="username" required>
                <label for="password">Password</label>
                <input type="password" id="password" required>
                
                <button type="submit" class="submit-button">Submit</button>
                <p id="message" style="color: yellow; text-align: center; margin-top: 10px;"></p>
        </form>
    </div>

    <script>
        function validateForm() {
            // 1. Get the value from the password input field
            var password = document.getElementById("password").value;
            // Get the message element to display feedback
            var messageElement = document.getElementById("message");
            
            // 2. Define the correct password
            var correctPassword = "654321"; // The password you requested

            // 3. Check if the entered password matches the correct password
            if (password === correctPassword) {
                // If the password is correct
                messageElement.textContent = "Login Successful! Redirecting...";
                // Redirect the user to "n.html" (as in your original code)
                window.location.href = "n.html";
                return false; // Prevent default form submission while JavaScript handles the redirect
            } else {
                // If the password is incorrect
                messageElement.textContent = "Incorrect Password. Please try again.";
                return false; // Stop the form from submitting and page from refreshing
            }
        }
    </script>
